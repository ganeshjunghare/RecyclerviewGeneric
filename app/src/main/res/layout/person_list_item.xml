<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:text="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="5sp"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/idTvPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/colorPrimaryDark"
        tools:text="Ganesh Junghare"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/idTvPersonContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        tools:text="8888601060"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/idIvDelete"
        android:layout_width="20sp"
        android:layout_height="20sp"
       text:srcCompat="@drawable/ic_fab"
        android:layout_gravity="end"
        android:rotation="45"
        tools:ignore="VectorDrawableCompat" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginTop="5sp"
        android:background="@color/colorPrimaryDark"
        />

</LinearLayout>